doctype html
html(lang='en')
  head
    include head.pug
    style.
      .thumbnail{
        display: inline-block;
      }
      
      .thumbnail.selected {
        border: 2px #f5bb00 solid;
      }
      .thumbnail>img {
        height: 200px;
      }
  body
    include nav-bar.pug
    .container-fluid
      .row
        .col-md-12#root
    script(src="/js/youtube-data.js")
    script(src='/song-info-form.js', type='text/babel')
    script(type='text/babel').
      ReactDOM.render(
        <SongInfoForm 
          ref={(component) => {window.hi = component}}
        />,
        document.getElementById('root')
      );  
    script(src="https://apis.google.com/js/client.js?onload=googleApiClientReady")
